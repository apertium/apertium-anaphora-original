<?xml version="1.0" encoding="UTF-8"?> <!-- -*- nxml -*- -->
<ref>
	
	<section-parameters>
		<anaphor>
			<parameter-item tags="det.pos"/>
			<parameter-item tags="prn.*"/>
		</anaphor>
		<antecedent>
			<parameter-item tags="n.*"/>
		</antecedent>
		<delimiter>
			<parameter-item tags="sent"/>
		</delimiter>
	</section-parameters>

	<section-def-cats>
		
		<def-cat n="det">
			<cat-item tags="det.*"/>
			<cat-item tags="det.pos.*"/>
		</def-cat>

		<def-cat n="adj">
			<cat-item tags="adj.*"/>
		</def-cat>

		<def-cat n="nom">
			<cat-item tags="n.*"/>
		</def-cat>

		<def-cat n="prep">
      		<cat-item tags="pr"/>
    	</def-cat>

    	<def-cat n="ind">
    		<cat-item tags="ind"/>
    	</def-cat>

	</section-def-cats>

	<section-markables>
		
		<markable n="NP">
			<pattern>
				<pattern-item n="det"/>
				<pattern-item n="adj"/>
				<pattern-item n="nom" head="t"/>
			</pattern>
			<pattern>
				<pattern-item n="det"/>
				<pattern-item n="nom" head="t"/>
			</pattern>
		</markable>

		<markable n="PP">
			<pattern>
				<pattern-item n="prep"/>
				<pattern-item n="det"/>
				<pattern-item n="nom"/>
			</pattern>
			<pattern>
				<pattern-item n="prep"/>
				<pattern-item n="nom"/>
			</pattern>

			<score n="-1"/> <!-- This gives a -1 score to any antecedent that is part of a PP -->
		</markable>

		<markable n="IP">
			<pattern>
				<pattern-item n="ind"/>
				<pattern-item n="nom"/>
			</pattern>

			<score n="-1"/>
		</markable>
		
	</section-markables>
	
</ref>